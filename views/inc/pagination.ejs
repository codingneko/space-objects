<% 
  function buildUrl(number){
    let base = '?q=' + query + '&c=' + amount + '&p=';

    return base + (Number(page) + (number));
  };
%>

<nav>
  <ul class="pagination">
    <% if (page > 1){ %>
        <li class="page-item">
        <a class="page-link" href="<%= buildUrl(-1) %>" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
        </li>
        <% if (page > 2) { %>
          <li class="page-item"><a class="page-link" href="<%= buildUrl(-2) %>"><%= Number(page)-2 %></a></li>
        <% } %>
        <li class="page-item"><a class="page-link" href="<%= buildUrl(-1) %>"><%= Number(page)-1 %></a></li>
    <% } %>
    <li class="page-item active"><a class="page-link" href="<%= page %>"><%= page %></a></li>
    <li class="page-item"><a class="page-link" href="<%= buildUrl(+1) %>"><%= Number(page)+1 %></a></li>
    <li class="page-item"><a class="page-link" href="<%= buildUrl(+2) %>"><%= Number(page)+2 %></a></li>
    <li class="page-item">
      <a class="page-link" href="<%= buildUrl(+1) %>" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>
